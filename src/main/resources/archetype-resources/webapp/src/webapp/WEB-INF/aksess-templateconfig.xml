<?xml version="1.0" encoding="iso-8859-1"?>
<templateConfiguration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                       xsi:schemaLocation="http://www.kantega.no http://www.kantega.no/aksess/aksess-templateconfig.xsd"
                       xmlns="http://www.kantega.no">

    <sites>
        <site databaseId="1" id="site" alias="/site/">
            <name>Main site</name>
        </site>
    </sites>

    <associationCategories>

        <associationCategory databaseId="1" id="Global menu">
            <name>Global menu</name>
        </associationCategory>

        <associationCategory databaseId="2" id="Main column">
            <name>Main column</name>
        </associationCategory>

    </associationCategories>

    <documentTypes>
        <documentType databaseId="1" id="News article">
            <name>News article</name>
        </documentType>
    </documentTypes>

    <contentTemplates>

        <contentTemplate databaseId="1" id="Frontpage">
            <name>Frontpage</name>
            <templateFile>frontpage.xml</templateFile>
            <associationCategories>
                <associationCategory id="Global menu"/>
            </associationCategories>
        </contentTemplate>

        <contentTemplate databaseId="2" id="Article">
            <name>Article</name>
            <templateFile>article.xml</templateFile>
            <associationCategories>
                <associationCategory id="Global menu"/>
            </associationCategories>
            <allowedParentTemplates>
                <contentTemplate id="Article"/>
                <contentTemplate id="Frontpage"/>
            </allowedParentTemplates>
        </contentTemplate>

        <contentTemplate databaseId="3" id="News archive">
            <name>News archive</name>
            <templateFile>news.xml</templateFile>
            <associationCategories>
                <associationCategory id="Main column"/>
            </associationCategories>
            <allowedParentTemplates>
                <contentTemplate id="Frontpage"/>
            </allowedParentTemplates>
        </contentTemplate>

        <contentTemplate databaseId="4" id="News article">
            <name>News article</name>
            <templateFile>article.xml</templateFile>
            <allowedParentTemplates>
                <contentTemplate id="News archive"/>
            </allowedParentTemplates>
            <documentType id="News article"/>
        </contentTemplate>

        <contentTemplate databaseId="5" id="Mail subscription">
            <name>Mail subscription</name>
            <templateFile>subscription.xml</templateFile>
            <allowedParentTemplates>
                <contentTemplate id="Frontpage"/>
            </allowedParentTemplates>
        </contentTemplate>

        <contentTemplate databaseId="6" id="Search">
            <name>Search</name>
            <templateFile>search.xml</templateFile>
            <allowedParentTemplates>
                <contentTemplate id="Frontpage"/>
            </allowedParentTemplates>
        </contentTemplate>

        <contentTemplate databaseId="7" id="Site map">
            <name>Site map</name>
            <templateFile>sitemap.xml</templateFile>
            <allowedParentTemplates>
                <contentTemplate id="Frontpage"/>
            </allowedParentTemplates>
        </contentTemplate>

        <contentTemplate databaseId="8" id="Photo album">
            <name>Photo album</name>
            <templateFile>photoalbum.xml</templateFile>
            <allowedParentTemplates>
                <contentTemplate id="Article"/>
                <contentTemplate id="Frontpage"/>
            </allowedParentTemplates>
        </contentTemplate>

        <contentTemplate databaseId="9" id="Link" contentType="LINK">
            <name>Link</name>
            <templateFile>link.xml</templateFile>
            <allowedParentTemplates>
                <contentTemplate id="Article"/>
                <contentTemplate id="Frontpage"/>
            </allowedParentTemplates>
        </contentTemplate>

        <contentTemplate databaseId="10" id="File" contentType="FILE">
            <name>File</name>
            <templateFile>file.xml</templateFile>
            <allowedParentTemplates>
                <contentTemplate id="Article"/>
                <contentTemplate id="Frontpage"/>
            </allowedParentTemplates>
        </contentTemplate>

        <contentTemplate databaseId="11" id="Poll">
            <name>Poll</name>
            <templateFile>poll.xml</templateFile>
            <allowedParentTemplates>
                <contentTemplate id="Article"/>
                <contentTemplate id="Frontpage"/>
            </allowedParentTemplates>
        </contentTemplate>

    </contentTemplates>

    <displayTemplates>

        <displayTemplate databaseId="1" id="Frontpage">
            <name>Frontpage</name>
            <view>/WEB-INF/jsp/site/index.jsp</view>
            <contentTemplate id="Frontpage"/>
            <sites>
                <site id="site"/>
            </sites>
        </displayTemplate>

        <displayTemplate databaseId="2" id="Article">
            <name>Article</name>
            <description>Standard template for publishing article</description>
            <view>/WEB-INF/jsp/common/templates/article.jsp</view>
            <contentTemplate id="Article"/>
        </displayTemplate>

        <displayTemplate databaseId="3" id="News archive" allowMultipleUsages="false">
            <name>News archive</name>
            <description>Archive for publishing news articles</description>
            <view>/WEB-INF/jsp/common/templates/news.jsp</view>
            <contentTemplate id="News archive"/>
            <controllers>
                <controller>newsArchiveController</controller>
            </controllers>
        </displayTemplate>

        <displayTemplate databaseId="4" id="News article">
            <name>News article</name>
            <description>Template for publishing a news article</description>
            <view>/WEB-INF/jsp/common/templates/news-item.jsp</view>
            <contentTemplate id="News article"/>
        </displayTemplate>

        <displayTemplate databaseId="5" id="Mail subscription" allowMultipleUsages="false">
            <name>Mail subscription</name>
            <description>Template for publishing a page where users can subscribe to newsletter</description>
            <view>/WEB-INF/jsp/common/templates/abonnement.jsp</view>
            <contentTemplate id="Mail subscription"/>
        </displayTemplate>

        <displayTemplate databaseId="6" id="Search" allowMultipleUsages="false">
            <name>Search</name>
            <description>Template for publishing a search page</description>
            <view>/WEB-INF/jsp/common/templates/search.jsp</view>
            <contentTemplate id="Search"/>
        </displayTemplate>

        <displayTemplate databaseId="7" id="Site map" allowMultipleUsages="false">
            <name>Site map</name>
            <description>Template for publishing a site map</description>
            <view>/WEB-INF/jsp/common/templates/sitemap.jsp</view>
            <contentTemplate id="Site map"/>
        </displayTemplate>

        <displayTemplate databaseId="8" id="Photo album">
            <name>Photo album</name>
            <description>Template where you can select a folder in the mediaarchive to publish a photo album</description>
            <view>/WEB-INF/jsp/common/templates/photoalbum.jsp</view>
            <contentTemplate id="Photo album"/>
        </displayTemplate>

        <displayTemplate databaseId="11" id="Poll">
            <name>Poll</name>
            <description>Template for publishing a poll</description>
            <view>/WEB-INF/jsp/common/templates/poll.jsp</view>
            <contentTemplate id="Poll"/>
        </displayTemplate>

    </displayTemplates>


</templateConfiguration>